{
  "version": "0.0.1",
  "description": "Work order web client and nodejs server.",
  "homepage": "https://github.com/objektwerks/work.order#readme",
  "license": "Apache 2.0",
  "author": "Objektwerks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/objektwerks/work.order.git"
  },
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "compile": "npx tsc",
    "copy": "copyfiles ./client/*.ico ./client/*.png ./client/*.css ./client/*.html ./dist/",
    "build": "npm run clean && npm run compile && npm run copy",
    "ddl": "mysql -uroot -p < ddl.sql",
    "dev": "npx tsx server.ts",
    "start": "node server.js"
  },
  "dependencies": {
    "compression": "1.7.4",
    "express": "4.18.1",
    "multer": "1.4.5-lts.1",
    "mysql": "2.18.1",
    "nodemailer": "6.7.8"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/copyfiles": "2.4.1",
    "@types/express": "4.17.13",
    "@types/multer": "1.4.7",
    "@types/mysql": "2.15.21",
    "@types/node": "^18.7.13",
    "@types/nodemailer": "6.4.5",
    "copyfiles": "2.4.1",
    "tsx": "^3.8.2",
    "typescript": "4.8.2"
  }
}