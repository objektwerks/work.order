{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": ["dom"],
    "module": "ES2022",
    "target": "ES2022",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/server.ts",
    "./src/client/*.ts",
    "./src/server/*.ts",
    "./src/shared/*.ts"
  ],
  "exclude": ["node_modules", "node_modules/@types"]
}